lane :sit do
  system '(cd ../../ && flutter build ios --release -t lib/main_sit.dart --no-codesign)'
  build_app(
    scheme: "Runner",
    configuration: "SIT",
    export_method: "ad-hoc",
    clean: true)
end

lane :uat do
  system '(cd ../../ && flutter build ios --release -t lib/main_uat.dart --no-codesign)'
  build_app(
    scheme: "Runner",
    configuration: "UAT",
    export_method: "ad-hoc",
    clean: true)
end

lane :beta do
  system '(cd ../../ && flutter build ios --release -t lib/main_prod.dart --no-codesign)'
  build_app(
    scheme: "Runner",
    configuration: "Release",
    export_method: "app-store",
    clean: true)
  upload_to_testflight
end

lane :prod do
  system '(cd ../../ && flutter build ios --release -t lib/main_prod.dart --no-codesign)'
  build_app(
    scheme: "Runner",
    configuration: "Release",
    export_method: "app-store",
    clean: true)
  upload_to_app_store
end
